    {
        <tr>
            <td>@k.MarkaID </td>
            <td>@k.MarkaAd </td>
            <td><a href="/Marka/MarkaSil/@k.MarkaID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Marka/MarkaGetir/@k.MarkaID" class="btn btn-dark">Güncelle</a></td>
            <td><a href="/Marka/MarkaDetay/@k.MarkaID" class="btn btn-secondary">Markaya Ait Ürünler</a></td>
        </tr>
    }
</table>
